<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Interview One -->
    <record id="custome_screening_form_view" model="ir.ui.view">
        <field name="name">Screening Form</field>
        <field name="model">hr.applicant</field>
        <field name="inherit_id" ref="hr_recruitment.hr_applicant_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook" position="inside">
                    <page string="Screening Form">
                        <div class="row">
                            <form>
                                <group string="Interview Details">
                                    <group>
                                        <field name="interviewer_one_ids" options="{'no_create': True, 'no_create_edit': True}" widget="many2many_avatar_user" />
                                        <field name="interview_one_date" widget="date"/>
                                    </group>
                                    <group>
                                        <field name="interview_one_link" widget="url"/>
                                        <field name="interview_one_decision" widget="radio"/>
                                    </group>
                                </group>
                                <group string="Interview Summary">
                                    <field name="interview_one_summary" placeholder="Summary..."/>
                                </group>
                            </form> 
                        </div>
                    </page>
            </xpath>
        </field>
    </record>
</odoo>
