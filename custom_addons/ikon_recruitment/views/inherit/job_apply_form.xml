<odoo>
    <template id="custom_job_apply_form" inherit_id="website_hr_recruitment.apply">

        <xpath expr="//div[@class='col-12 mb-0 py-2 s_website_form_field s_website_form_required'][2]" position="after">
            <div class="col-12 mb-0 py-2 s_website_form_field s_website_form_required s_website_form_model_required"
                 data-type="char" data-name="Field">

                <div class="row s_col_no_resize s_col_no_bgcolor">

                    <label class="col-4 col-sm-auto s_website_form_label" style="width: 200px" for="pds_dob">
                        <span class="s_website_form_label_content">Date of birth</span>
                    </label>
                    <div class="col-sm" style="position: relative">
                        <input id="pds_dob" type="date"
                               class="form-control s_website_form_input pl64"
                               style="padding-left: 14px"
                               name="pds_dob"
                        />
                    </div>
                </div>
            </div>

            <div class="col-12 mb-0 py-2 s_website_form_field s_website_form_required" data-type="selection" data-name="Field"> <!-- ini ditambahkan -->
                <div class="row s_col_no_resize s_col_no_bgcolor">
                    <label class="col-4 col-sm-auto s_website_form_label" style="width: 200px" for="recruitment5">
                        <span class="s_website_form_label_content">Period Experience</span>
                        <span class="s_website_form_mark"> *</span>
                    </label>
                    <div class="col-sm">
                        <select id="recruitment5" class="form-control s_website_form_input" name="period_experience" required="">
                            <option value="">Select Period</option>
                            <option value="0-1">0-1 years</option>
                            <option value="1-3">1-3 years</option>
                            <option value="3-5">3-5 years</option>
                            <option value="5+">5+ years</option>
                        </select>
                    </div>
                </div>
            </div>
        </xpath>

        <xpath expr="//div[@class='col-12 mb-0 py-2 s_website_form_field s_website_form_required'][2]" position="after">
            <div class="col-12 mb-0 py-2 s_website_form_field s_website_form_required s_website_form_model_required"
                 data-type="char" data-name="Field">

                <div class="row s_col_no_resize s_col_no_bgcolor">

                    <!--                    <t name="dob" t-set="dob" t-attf-value="env['hr.applicant'].search([])"/>-->
                    <label class="col-4 col-sm-auto s_website_form_label" style="width: 200px"
                           for="from_talent_universitas">
                        <span class="s_website_form_label_content">University</span>
                    </label>
                    <div class="col-sm" style="position: relative">
                        <input id="from_talent_universitas" type="text"
                               class="form-control s_website_form_input pl64"
                               placeholder="Universitas Indonesia"
                               style="padding-left: 14px"
                               name="from_talent_universitas"

                        />
                    </div>
                </div>
            </div>
            
            <div class="col-12 mb-0 py-2 s_website_form_field" data-type="monetary" data-name="expected_salary" data-required="true">
                <div class="row s_col_no_resize s_col_no_bgcolor">
                    <label class="col-4 col-sm-auto s_website_form_label" style="width: 200px" for="expected_salary">
                        <span class="s_website_form_label_content">Expected Salary</span>
                        <span class="s_website_form_mark"> *</span>
                    </label>
                    <div class="col-sm">
                        <input id="expected_salary" type="number" class="form-control s_website_form_input" name="expected_salary" placeholder="0.00" step="0.01" required="true"/>
                    </div>
                </div>
            </div>
            
            <!-- Proposed Salary Field -->
            <div class="col-12 mb-0 py-2 s_website_form_field" data-type="monetary" data-name="proposed_salary" data-required="true">
                <div class="row s_col_no_resize s_col_no_bgcolor">
                    <label class="col-4 col-sm-auto s_website_form_label" style="width: 200px" for="proposed_salary">
                        <span class="s_website_form_label_content">Proposed Salary</span>
                        <span class="s_website_form_mark"> *</span>
                    </label>
                    <div class="col-sm">
                        <input id="proposed_salary" type="number" class="form-control s_website_form_input" name="proposed_salary" placeholder="0.00" step="0.01" required="true"/>
                    </div>
                </div>
            </div>

            <div class="col-12 mb-0 py-2 s_website_form_field" data-type="monetary" data-name="current_salary" data-required="true">
                <div class="row s_col_no_resize s_col_no_bgcolor">
                    <label class="col-4 col-sm-auto s_website_form_label" style="width: 200px" for="current_salary">
                        <span class="s_website_form_label_content">Current Salary</span>
                        <span class="s_website_form_mark"> *</span>
                    </label>
                    <div class="col-sm">
                        <input id="current_salary" type="number" class="form-control s_website_form_input" name="current_salary" placeholder="0.00" step="0.01" required="true"/>
                    </div>
                </div>
            </div>
            
            <div class="col-12 mb-0 py-2 s_website_form_field" data-type="date" data-name="availability" data-required="true">
                <div class="row s_col_no_resize s_col_no_bgcolor">
                    <label class="col-4 col-sm-auto s_website_form_label" style="width: 200px" for="availability">
                        <span class="s_website_form_label_content">Availability</span>
                        <span class="s_website_form_mark"> *</span>
                    </label>
                    <div class="col-sm">
                        <input id="availability" type="date" class="form-control s_website_form_input" name="availability" required="true"/>
                    </div>
                </div>
            </div>
        </xpath>

        <xpath expr="//section[@class='col-12 col-md-3 ps-5']/a[@class='btn btn-outline-primary btn-lg mb16 o_apply_description_link']/i"
               position="attributes">
            <!-- Empty tag to remove the icon -->
            <attribute name="style">display: none;</attribute>
