<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="hr_timesheet_view_calendar" model="ir.ui.view">
            <field name="name">hr.timesheet.calendar</field>
            <field name="model">account.analytic.line</field>
            <field name="priority" eval="1"/>
            <field name="arch" type="xml">
                <calendar event_open_popup="true" event_limit="5" date_start="date" date_delay="unit_amount" color="project_id" mode="month" quick_add="False" delete="false">
                    <field name="date" position="attributes">
                        <attribute name="readonly">1</attribute>
                    </field>
                    <field name="employee_id" filters="1"/>
                    <field name="project_id" filters="1"/>
                    <field name="task_id" filters="1"
                           context="{'default_project_id': project_id}"/>
                    <field name="name"/>
                    <!-- <field name="status" filters="1"/> -->
                    <field name="unit_amount"
                           widget="timesheet_uom"
                           sum="Total"
                           decoration-danger="unit_amount &gt; 24 or unit_amount &lt; 0" filters="1"/>
                    <field name="company_id"/>
                    <field name="user_id" filters="1"/>
                </calendar>
            </field>
        </record>
        <record id="hr_timesheet.timesheet_action_all" model="ir.actions.act_window">
            <field name="view_mode">calendar</field>
        </record>
        <record id="hr_timesheet.act_hr_timesheet_line" model="ir.actions.act_window">
            <field name="view_mode">calendar</field>
        </record>
    </data>
</odoo>
