<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Tree View -->
    <record id="view_karyawan_tree" model="ir.ui.view">
        <field name="name">karyawann.ikon.tree</field>
        <field name="model">karyawann.ikon</field>
        <field name="arch" type="xml">
            <tree string="Karyawan List">
                <field name="ref"/>
                <field name="name"/>
                <field name="age"/>
                <field name="married"/>
                <field name="gender"/>
                <field name="payment_term_id"/>
                <field name="capitalized_name"/> 
            </tree>
        </field>
    </record>

    <!-- Search View  -->
    <record id="view_karyawan_ikon_search" model="ir.ui.view">
        <field name="name">karyawann.ikon.search</field>
        <field name="model">karyawann.ikon</field>
        <field name="arch" type="xml">
            <search string="Karyawan List">
                <field name="ref"/>
                <field name="name" filter_domain="['|', ('name', 'ilike', self), ('ref','ilike', self)]" />
                <field name="age"/>
                <filter name="filter_male" string="male" domain="[('gender', '=', 'male')]"/>
                <filter name="filter_female" string="female" domain="[('gender', '=', 'female')]"/> 
                <separator/>
                <filter name="filter_married" string="married" domain="[('married', '=', 'married')]"/>
            </search>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_karyawan_form" model="ir.ui.view">
        <field name="name">karyawann.ikon.form</field>
        <field name="model">karyawann.ikon</field>
        <field name="arch" type="xml">
            <form string="Karyawan Form">
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="ref" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <field name="name"/>
                        <field name="age"/>
                        <field name="married"/>
                        <field name="gender"/>
                        <field name="noted"/>
                        <field name="payment_term_id"/>
                        <field name="capitalized_name"/> 
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="message_ids" options="{'post_refresh': 'recipients'}"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Action Definition -->
    <record id="action_karyawan_form" model="ir.actions.act_window">
        <field name="name">Karyawan</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">karyawann.ikon</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'search_default_filter':1}</field>
        <field name="search_view_id" ref="view_karyawan_ikon_search"/>
    </record>

    <!-- Menu Item -->
    <menuitem id="menu_karyawan_root"
              name="Karyawan"
              sequence="10"/>

    <menuitem id="menu_magang_record"
              name="Magang Ikon"
              parent="menu_karyawan_root"
              sequence="10"/>

    <menuitem id="menu_karyawan"
              name="Karyawan"
              parent="menu_magang_record"
              action="action_karyawan_form"
              sequence="10"/>
</odoo>
