<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="web.external_layout">
            <!--Invoice Reference-->
            <t t-set="o" t-value="o.with_context({'lang':o.partner_id.lang})"/>
            <t t-set="model" t-value="'account.move'"/>
            <t t-set="tax_totals" t-value="o.tax_totals"/>
            <t t-set="company" t-value="o.company_id"/>

            <xpath expr="//div[@class=['o_company_#{company.id}_layout header']" position="replace">
                <div t-attf-class="o_company_#{company.id}_layout header" t-att-style="report_header_style">
                    <div class="o_background_header">
                        <div class="float-end">
                            <div class="mt0 text-end h3" t-field="company.report_header"/>
                        </div>
                        <img t-if="company.logo" t-att-src="image_data_uri(company.logo)" class="float-start"
                             alt="Logo"/>
                        <div class="float-start company_address">
                            <ul class="list-unstyled">
                                <li t-if="company.is_company_details_empty">
                                    <t t-esc="company.partner_id"
                                       t-options='{"widget": "contact", "fields": ["address", "name"], "no_marker": true}'/>
                                </li>
                                <li t-else="">
                                    <t t-esc="company.company_details"/>
                                </li>
                                <li t-if="forced_vat">
                                    <t t-esc="company.country_id.vat_label or 'Tax ID'"/>:
                                    <span t-esc="forced_vat"/>
                                </li>
                            </ul>
                        </div>
                        <div class="clearfix mb8"/>
                    </div>
                </div>
            </xpath>
            <!--            <div t-attf-class="o_company_#{company.id}_layout article o_report_layout_striped {{  'o_report_layout_background' if company.layout_background in ['Geometric', 'Custom']  else  '' }}"-->
            <!--                 t-attf-style="background-image: url({{ 'data:image/png;base64,%s' % company.layout_background_image.decode('utf-8') if company.layout_background_image and company.layout_background == 'Custom' else '/base/static/img/bg_background_template.jpg' if company.layout_background == 'Geometric' else ''}});"-->
            <!--                 t-att-data-oe-model="o and o._name" t-att-data-oe-id="o and o.id"-->
            <!--                 t-att-data-oe-lang="o and o.env.context.get('lang')">-->
            <!--                <t t-call="web.address_layout"/>-->
            <!--                <t t-out="0"/>-->
            <!--            </div>-->

            <div class="page" style="overflow: hidden;">


                <br/>
                <!--Product Table-->
                <div style="padding-top:20px;width:100%">
                    <t t-set="display_discount"
                       t-value="any([l.discount for l in o.invoice_line_ids])"/>
                    <table class="mb-3" style="border: 1px solid white" name="info_table">
                        <tr t-attf-style="background-color: white" t-if="o.name">
                            <td class="text-start" style="width:15%">
                                <span>Invoice No.</span>
                            </td>
                            <td class="text-center" style="width:5%">
                                <span>:</span>
                            </td>
                            <td class="text-start">
                                <span style="font-weight:bold" t-field="o.name"/>
                            </td>
                        </tr>
                        <!-- <tr t-attf-style="background-color: white">
                            <td class="text-start" style="width:25%"><span>PO No.</span></td>
                            <td class="text-center" style="width:5%"><span>:</span></td>
                            <td class="text-start"><span style="font-weight:bold">370-0000011026</span> dated <span style="font-weight:bold">21-Aug-2023</span></td>
                        </tr> -->
                        <tr t-attf-style="background-color: white" t-if="o.invoice_date_due">
                            <td class="text-start" style="width:25%">
                                <span>Due date</span>
                            </td>
                            <td class="text-center" style="width:5%">
                                <span>:</span>
                            </td>
                            <td class="text-start">
                                <span style="font-weight:bold" t-field="o.invoice_date_due"/>
                            </td>
                        </tr>
                        <tr t-attf-style="background-color: white" t-if="o.payment_for">
                            <td class="text-start" style="width:25%">
                                <span>Payment for</span>
                            </td>
                            <td class="text-center" style="width:5%">
                                <span>:</span>
                            </td>
                            <td class="text-start">
                                <span style="font-weight:bold" t-field="o.payment_for"/>
                            </td>
                        </tr>
                        <tr t-attf-style="background-color: white" t-if="o.attention">
                            <td class="text-start" style="width:25%">
                                <span>Attention</span>
                            </td>
                            <td class="text-center" style="width:5%">
                                <span>:</span>
                            </td>
                            <td class="text-start">
                                <span style="font-weight:bold" t-field="o.attention"/>
                            </td>
                        </tr>
                        <tr t-attf-style="background-color: white" t-if="o.invoice_date">
                            <td class="text-start" style="width:25%">
                                <span>Invoice Date</span>
                            </td>
                            <td class="text-center" style="width:5%">
                                <span>:</span>
                            </td>
                            <td class="text-start">
                                <span style="font-weight:bold" t-field="o.invoice_date"/>
                            </td>
                        </tr>
                        <tr t-attf-style="background-color: white" t-if="o.payment_reference">
                            <td class="text-start" style="width:25%">
                                <span>Payment Reference</span>
                            </td>
                            <td class="text-center" style="width:5%">
                                <span>:</span>
                            </td>
                            <td class="text-start">
                                <span style="font-weight:bold" t-field="o.payment_reference"/>
                            </td>
                        </tr>
                    </table>
                    <!--Product Details-->
                    <table class="table table-sm o_main_table table-borderless" name="invoice_line_table">
                        <thead>
                            <tr>
                                <th class="text-start"
                                    t-attf-style=" background-color:#{o.theme_id.base_color};color:#{o.theme_id.heading_text_color};">
                                    Description
                                </th>
                                <th class="text-center"
                                    t-attf-style=" background-color:#{o.theme_id.base_color};color:#{o.theme_id.heading_text_color};">
                                    Qty
                                </th>
                                <th class="text-center"
                                    t-attf-style=" background-color:#{o.theme_id.base_color};color:#{o.theme_id.heading_text_color};">
                                    UOM
                                </th>
                                <th class="text-end"
                                    t-attf-style=" background-color:#{o.theme_id.base_color};color:#{o.theme_id.heading_text_color};">
                                    Unite Price<br/>(IDR)
                                </th>
                                <th class="text-center"
                                    t-attf-style=" background-color:#{o.theme_id.base_color};color:#{o.theme_id.heading_text_color};">
                                    Term
                                </th>
                                <th class="text-end"
                                    t-attf-style=" background-color:#{o.theme_id.base_color};color:#{o.theme_id.heading_text_color};">
                                    Invoice Amount<br/>(IDR)
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr t-foreach="o.invoice_line_ids" t-as="l" t-if="l.item_description or l.name">
                                <td class="text-start"
                                    t-attf-style="color:#{o.theme_id.text_color};">
                                    <span t-if="l.item_description" t-field="l.item_description"/>
                                    <span t-if="not l.item_description" t-field="l.name"/>
                                </td>

                                <td class="text-center"
                                    t-attf-style="color:#{o.theme_id.text_color};">
                                    <span t-field="l.quantity"/>
                                </td>
                                <td class="text-center"
                                    t-attf-style="color:#{o.theme_id.text_color};">
                                    <span t-field="l.product_uom_id"/>
                                </td>
                                <td class="text-end"
                                    t-attf-style="color:#{o.theme_id.text_color};">
                                    <span t-field="l.price_unit"/>
                                </td>
                                <td class="text-center"
                                    t-attf-style="color:#{o.theme_id.text_color};">
                                    <!-- <span t-field="l." /> -->
                                </td>
                                <td class="text-end"
                                    t-attf-style="color:#{o.theme_id.text_color};">
                                    <span t-field="l.price_subtotal"/>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                    <!--Payment details-->
                    <div class="clearfix mb-4">
                        <div id="total" class="row">
                            <div
                                    t-attf-class="#{'col-6' if report_type != 'html' else 'col-sm-7 col-md-6'} ms-auto">
                                <table class="table table-sm table-borderless"
                                       style="page-break-inside: avoid;">
                                    <tbody>
                                        <tr>
                                            <td>
                                                <span>Sub Total</span>
                                            </td>
                                            <td class="text-end">
                                                <span t-esc="tax_totals['formatted_amount_untaxed']"/>
                                                <!-- <span t-esc="o[0]"/> -->
                                            </td>
                                        </tr>
                                        <!--                                            <tr>-->
                                        <!--                                                <td>-->
                                        <!--                                                    <span>PPN</span>-->
                                        <!--                                                </td>-->
                                        <!--                                                <td class="text-end">-->
                                        <!--                                                    <span t-esc="tax_totals['groups_by_subtotal']['Untaxed Amount'][1]['formatted_tax_group_amount']"/>-->
                                        <!--                                                </td>-->
                                        <!--                                            </tr>-->
                                        <!--                                            <tr>-->
                                        <!--                                                <td>-->
                                        <!--                                                    <span>PPH</span>-->
                                        <!--                                                </td>-->
                                        <!--                                                <td class="text-end">-->
                                        <!--                                                    <span t-esc="tax_totals['groups_by_subtotal']['Untaxed Amount'][0]['formatted_tax_group_amount']"/>-->
                                        <!--                                                </td>-->
                                        <!--                                            </tr>-->

                                        <!--Total amount with all taxes-->
                                        <tr class="border-black o_total">
                                            <td>
                                                <strong
                                                        t-attf-style="color:#{o.theme_id.customer_text_color}">
                                                    Total
                                                </strong>
                                            </td>
                                            <td class="text-end">
                                                <span
                                                        t-esc="tax_totals['formatted_amount_total']"
                                                        t-attf-style="color:#{o.theme_id.customer_text_color}"/>
                                            </td>
                                        </tr>
                                        <!--Paid amount details-->
                                        <t t-if="print_with_payments">
                                            <t t-if="o.payment_state != 'invoicing_legacy'">
                                                <t t-set="payments_vals"
                                                   t-value="o.sudo().invoice_payments_widget and o.sudo().invoice_payments_widget['content'] or []"/>
                                                <t t-foreach="payments_vals" t-as="payment_vals">
                                                    <tr>
                                                        <td>
                                                            <i
                                                                    class="oe_form_field text-end oe_payment_label"
                                                                    t-attf-style="color:#{o.theme_id.text_color}">
                                                                Paid
                                                                on
                                                                <t
                                                                        t-esc="payment_vals['date']"
                                                                        t-options='{"widget": "date"}'
                                                                        t-attf-style="color:#{o.theme_id.text_color}"/>
                                                            </i>
                                                        </td>
                                                        <td class="text-end"
                                                            t-attf-style="color:#{o.theme_id.text_color}">
                                                            <span t-esc="payment_vals['amount']"
                                                                  t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                                                        </td>
                                                    </tr>
                                                </t>
                                                <t t-if="len(payments_vals) > 0">
                                                    <tr class="border-black o_total">
                                                        <td>
                                                            <strong
                                                                    t-attf-style="color:#{o.theme_id.customer_text_color}">
                                                                Amount
                                                                Due
                                                            </strong>
                                                        </td>
                                                        <td class="text-end">
                                                            <span t-field="o.amount_residual"
                                                                  t-attf-style="color:#{o.theme_id.customer_text_color}"/>
                                                        </td>
                                                    </tr>
                                                </t>
                                            </t>
                                        </t>
                                    </tbody>
                                </table>
                                <p style="font-size:15px; font-style: italic;">*
                                    <span t-esc="o.in_word"/>
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
                <br/>
                <br/>
                <br/>
                <br/>
                <div t-attf-style="color:#{o.theme_id.text_color};padding-top:10%;"
                     class="col-12">
                    <p t-if="not is_html_empty(o.narration)">
                        <strong>Comment:</strong>
                        <span t-field="o.narration"/>
                    </p>
                    <p t-if="o.fiscal_position_id.note">
                        <strong>Fiscal Position Remark:</strong>
                        <span t-field="o.fiscal_position_id.note"/>
                    </p>
                    <p t-if="o.move_type in ('out_invoice','in_refund')">Please use the
                        following communication for your payment :
                        <b>
                            <span t-field="o.name"/>
                        </b>
                    </p>
                    <p t-if="o.invoice_payment_term_id" name="payment_term">
                        <span t-field="o.invoice_payment_term_id.note"/>
                    </p>
                    <p t-if="o.fiscal_position_id.note" name="note">
                        <span t-field="o.fiscal_position_id.note"/>
                    </p>
                    <t t-if="o.company_id.country_id.code == 'IN'">
                        <p id="total_in_words" class="mb16">
                            <strong>Total (In Words):</strong>
                            <span t-field="o.amount_total_words"/>
                        </p>
                    </t>
                    <div id="qrcode"
                         t-if="(o.company_id.qr_code) and (o.currency_id.name == 'EUR') and (o.invoice_partner_bank_id.acc_number != False)">
                        <p t-if="(o.invoice_partner_bank_id.qr_code_valid)">
                            <strong class="text-center">Scan me with your banking app.</strong>
                            <br/>
                            <br/>
                            <img class="border border-dark rounded"
                                 t-att-src="o.invoice_partner_bank_id.build_qr_code_url(o.amount_residual,  o.ref or o.name)"/>
                        </p>
                        <p t-if="(o.invoice_partner_bank_id.qr_code_valid == False)">
                            <strong class="text-center">The SEPA QR Code information are not set
                                correctly.
                            </strong>
                            <br/>
                        </p>
                    </div>
                </div>
                <xpath expr="//p[@name='payment_communication']" position="after">
                    <div class="row mt-4 mb-4 ml-5" id="sincerely">

                        <div t-if="o.spv.name" class="col-auto col-3 mw-100 mb-2">
                            <strong>Sincerely,</strong>
                            <br/>
                            <br/>
                            <br/>
                            <br/>
                            <br/>
                            <p class="m-0">
                                <span t-field="o.spv"/>
                                <br/>
                                <span t-field="o.spv.function"/>


                            </p>
                        </div>
                    </div>
                </xpath>
            </div>
        </template>

        <!--modern Template View-->
        <template id="custom_template_report_invoice_fif">
            <!--External layout template-->
            <t t-call="web.external_layout">

            </t>
        </template>
    </data>
</odoo>