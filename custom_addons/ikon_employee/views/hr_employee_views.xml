<odoo>
    <record id="view_employee_form_approvers" model="ir.ui.view">
        <field name="name">hr.employee.form.approvers</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_form"/>
        <field name="arch" type="xml">
            <xpath expr="//group[@name='managers']" position="inside">
                <field name="timesheet_approvers" widget="many2many_tags"/>
                <field name="leave_approvers" widget="many2many_tags"/>
                <field name="expense_approvers" widget="many2many_tags"/>
            </xpath>
        </field>
    </record>
</odoo>
