<odoo>
    <data>
        <record id="custom_view_users_form" model="ir.ui.view">
            <field name="name">custom.res.users.form</field>
            <field name="model">res.users</field>
            <field name="inherit_id" ref="base.view_users_form"/>
            <field name="arch" type="xml">

                <xpath expr="//notebook" position="inside">
                    <page string="Login Direct">
                        <group>
                            <field string="Active" name="direct_active"/>
                            <field string="Menu Direct" name="menu_id"/>
                        </group>
                        
                    </page>
                </xpath>

            </field>
            </record>
    </data>
</odoo>