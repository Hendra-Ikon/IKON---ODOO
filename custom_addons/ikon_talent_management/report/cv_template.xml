<?xml version="1.0" encoding="utf-8"?>
<odoo>


    <template id="cv_test">
        &lt;!DOCTYPE html&gt;
        <html t-att-lang="lang and lang.replace('_', '-')"
              t-att-data-report-margin-top="data_report_margin_top"
              t-att-data-report-header-spacing="data_report_header_spacing"
              t-att-data-report-dpi="data_report_dpi"
              t-att-data-report-landscape="data_report_landscape"
        >
            <head>
                <meta charset="utf-8"/>
                <meta name="viewport" content="initial-scale=1"/>
                <title>
                    <t t-esc="title or 'Odoo Report'"/>
                </title>
                <t t-call-assets="ikon_talent_management.cv_pdf" t-js="false"/>
                <!--The following is kind of a hack-->
                <!--in an iframe, we don't want the session to perform qweb_templates rpc-->
                <script type="text/javascript">
                    window.odoo = {};
                    window.odoo.__session_info__ = {is_report: true};
                </script>
                <!--                <t t-call-assets="web.assets_common" t-css="false"/>-->
                <!--                <t t-call-assets="web.report_assets_common" t-css="false"/>-->

            </head>
            <body t-att-class="'container' if not full_width else 'container-fluid'">
                <div id="wrapwrap">
                    <main>
                        <div t-attf-class="article"
                        style="background-image: url('https://thumbor.prod.vidiocdn.com/ThSPXj565mx4Pdosi4uGjagYg_w=/1336x480/filters:quality(75)/vidio-web-prod-film/uploads/film/desktop_headline_image/9537/sleep-4ec8ae.jpg';">

                            <h1>HALO</h1>
                        </div>

                    </main>
                </div>
            </body>
        </html>


    </template>




    <template id="custom_cv_template">

        <t t-call="web.html_container">

                <div t-attf-class="header">

                </div>


                <div t-attf-class="article">

                    <t t-foreach="docs" t-as="o">

                        <t t-set="data"
                           t-value="env['hr.applicant'].search([('email_from', '=', o.email_from)])"/>

                        <div t-attf-class="row">


                            <!-- LEFT SIDE-->

                            <div t-attf-class="left-col">
                                <div t-attf-class="kosong">

                                </div>

                                <div t-attf-class="skills_content">
                                    <div t-attf-class="skill_header">
                                        SKILL &amp; KNOWLEDGE
                                    </div>
                                    <div t-attf-class="white_line">

                                    </div>
                                    <!--                                <t t-set="skill_data" t-value="env['hr.skill'].search([])"/>-->
                                    <div name="skill_type"
                                         style="height: 30px; font-size: 10px; margin-left: 70px; color: white; font-size: 20px; margin-top: 10px;">

                                        <t t-if="o.custom_skill != False">
                                            <ul t-foreach="data.custom_skill.split(',') or []" t-as="skill"
                                                t-key="skill">
                                                <li>
                                                    <t t-esc="skill"/>
                                                </li>
                                            </ul>
                                        </t>
                                    </div>
                                </div>

                                <!--                            EDUCATION SECTION-->
                                <div t-attf-class="kosong"/>
                                <div t-attf-class="education_content">
                                    <div t-attf-class="education_header">
                                        ACADEMIC HISTORY
                                    </div>
                                    <div t-attf-class="white_line">

                                    </div>
                                    <div name="education_type"
                                         style="height: 30px; font-size: 10px; margin-left: 70px; color: white; font-size: 20px; margin-top: 10px;">

                                        <t t-if="o.pds_education != False">
                                            <ul t-foreach="data['pds_education']" t-as="education"
                                                t-key="education">
                                                <li>
                                                    <span t-field="education.pds_edu_level"/>
                                                    <span>

                                                        in
                                                        <t t-esc="education['pds_edu_major']"/>
                                                        at
                                                        <t t-esc="education['pds_edu_inst_name']"/>
                                                        <t t-esc="education['pds_edu_location']"/>
                                                    </span>
                                                </li>
                                            </ul>
                                        </t>
                                    </div>
                                </div>

                                <!-- TRAINING & COURSE SECTION-->
                                <div t-attf-class="kosong"/>
                                <div t-attf-class="course_content">
                                    <div t-attf-class="course_header">
                                        TRAINING &amp; COURSE
                                    </div>
                                    <div t-attf-class="white_line">

                                    </div>
                                    <div name="education_type"
                                         style="height: 30px; font-size: 10px; margin-left: 70px; color: white; font-size: 20px; margin-top: 10px;">

                                        <t t-if="o.pds_education != False">
                                            <ul t-foreach="data['pds_education']" t-as="education"
                                                t-key="education">
                                                <li>
                                                    <span t-field="education.pds_edu_level"/>
                                                    <span>

                                                        in
                                                        <t t-esc="education['pds_edu_major']"/>
                                                        at
                                                        <t t-esc="education['pds_edu_inst_name']"/>
                                                        <t t-esc="education['pds_edu_location']"/>
                                                    </span>
                                                </li>
                                            </ul>
                                        </t>
                                    </div>
                                </div>


                            </div>

                            <!-- RIGHT SIDE-->

                            <div t-attf-class="right-col">

                                <div t-attf-class="company_logo">
                                    <img t-attf-class="img-logo"
                                         src="ikon_talent_management/static/src/img/logo-ikon.png"
                                         style="width: 50px; height: 70px;"/>
                                </div>

                                <div t-attf-class="right-container-wrapper">
                                    <div t-attf-class="applicant_name">
                                        <h1 t-attf-class="applicant-name-h1" t-esc="o.name" t-attf-style="font-family: 'Fantasy', fantasy !important;"/>
                                    </div>
                                    <div t-attf-class="summary_exp">
                                        SUMMARY OF EXPERIENCE
                                    </div>
                                    <div t-attf-class="brown_line"/>
                                    <td t-attf-class="summary_content">
                                        <small>
                                            <t t-esc="o.summary_experience"/>
                                        </small>
                                    </td>
                                    <div t-attf-class="key_relevance">
                                        KEY RELEVANCE EXPERIENCE
                                    </div>
                                    <div t-attf-class="key_relevance_brown_line"/>

                                    <div t-attf-class="content-data">

                                        <!--                                    <t t-set="data"-->
                                        <!--                                       t-value="env['hr.applicant'].search([('email_from', '=', o.email_from)])"/>-->
                                        <t t-foreach="data['pds_resume']" t-as="resume">


                                            <div t-attf-class="o_data_row" data-id="datapoint_4">
                                                <!--                                                <td t-attf-class"o_resume_timeline_cell position-relative pe-lg-2">-->
                                                <!--                                                    <div t-attf-class"rounded-circle bg-red position-relative"></div>-->
                                                <!--                                                </td>-->

                                                <div t-attf-class="o_data_cell pt-0">
                                                    <div t-attf-class="o_resume_line">

                                                        <h4 t-attf-class="o_resume_line_title mt-2">
                                                            <t t-esc="resume['rsm_com_name']"
                                                               style="font-weight: bold;"/>
                                                        </h4>
                                                        <small t-attf-class="o_resume_line_dates fw-bold">
                                                            (
                                                            <t t-esc="resume['resume_dateStart']"/>
                                                            <t t-esc="resume['resume_dateEnd']"/>)
                                                        </small>
                                                        <p t-attf-class="o_resume_line_desc">As:
                                                            <t t-esc="resume['rsm_com_job_title']"/>
                                                        </p>
                                                        <p t-attf-class="o_resume_line_desc">Project description:
                                                            <!--                                                        <t t-esc="resume['rsm_com_projectDes']"/>-->
                                                            <small>
                                                                <t t-esc="resume['rsm_com_projectDes']"
                                                                   t-attf-class="project_desc"/>
                                                            </small>
                                                        </p>
                                                        <br/>
                                                        <p t-attf-class="o_resume_line_desc halo">Technology used:
                                                        </p>
                                                        <ul t-attf-style="margin-left: 20px;">

                                                            <li>
                                                                <div t-attf-class="content-li row">
                                                                    <div t-attf-class="content-li-data-name">Backend
                                                                        technology</div>:
                                                                    <div t-attf-class="spasi_kecil"/>
                                                                    <div t-attf-class="content-li-data-data">
                                                                        <t t-esc="resume['resume_tech_used_backend']"/>
                                                                    </div>
                                                                </div>
                                                            </li>
                                                            <li>
                                                                <div t-attf-class="content-li row">
                                                                    <div t-attf-class="content-li-data-name">Frontend
                                                                        technology</div>:
                                                                    <div t-attf-class="spasi_kecil"/>
                                                                    <div t-attf-class="content-li-data-data">
                                                                        <t t-esc="resume['resume_tech_used_frontend']"/>
                                                                    </div>
                                                                </div>
                                                            </li>
                                                            <li>
                                                                <div t-attf-class="content-li row">
                                                                    <div t-attf-class="content-li-data-name">Database
                                                                        technology</div>:
                                                                    <div t-attf-class="spasi_kecil"/>
                                                                    <div t-attf-class="content-li-data-data">
                                                                        <t t-esc="resume['resume_tech_used_database']"/>
                                                                    </div>
                                                                </div>
                                                            </li>


                                                        </ul>
                                                        <p t-attf-class="o_resume_line_desc">System Integration:
                                                        </p>
                                                        <ul t-attf-style="margin-left: 20px;">

                                                            <li>
                                                                <div t-attf-class="content-li row">
                                                                    <div t-attf-class="content-li-data-name">
                                                                        Application</div>:
                                                                    <div t-attf-class="spasi_kecil"/>
                                                                    <div t-attf-class="content-li-data-data">
                                                                        <t t-esc="resume['resume_sys_int_appl']"/>
                                                                    </div>
                                                                </div>
                                                            </li>
                                                            <li>
                                                                <div t-attf-class="content-li row">
                                                                    <div t-attf-class="content-li-data-name">
                                                                        Middleware</div>:
                                                                    <div t-attf-class="spasi_kecil"/>
                                                                    <div t-attf-class="content-li-data-data">
                                                                        <t t-esc="resume['resume_sys_int_middleware']"/>
                                                                    </div>
                                                                </div>
                                                            </li>
                                                            <li>
                                                                <div t-attf-class="content-li row">
                                                                    <div t-attf-class="content-li-data-name">Email
                                                                        Notification</div>:
                                                                    <div t-attf-class="spasi_kecil"/>
                                                                    <div t-attf-class="content-li-data-data">
                                                                        <t t-esc="resume['resume_sys_int_email_notif']"/>
                                                                    </div>
                                                                </div>
                                                            </li>
                                                        </ul>
                                                        <br/>
                                                        <br/>

                                                    </div>
                                                </div>
                                            </div>
                                        </t>
                                    </div>


                                </div>
                            </div>
                        </div>
                        <div t-attf-class="custom_height" t-attf-style="height: {{ o.height_value }}px;"/>



                        <style>

                            body {
                            padding-left: 0 !important;

                            }


                            html {
                            height: 0px !important;
                            page-break-after:auto;
                            }


                            .article {
                            display: flex;
                            flex-direction: column;
                            }



                            .left-col {
                            background-color: #e77f00;
<!--                            height: 1435px;-->
                            width: 350px !important;
                            }

                            .custom_height {
                            background-color:  #e77f00;
                            width: 350px !important;

                            }

                            .left-col_bawah {
                            background-color: red;
                            width: 350px !important;
                            }

                            .kosong{
                            background-color: #e77f00;
                            width: 250px !important;
                            height: 260px;
                            }

                            .kosong_bawah{
                            background-color: #e77f00;
                            color: #e77f00;
                            width: 350px !important;
                            }

                            .spasi_kecil {
                            width: 5px;

                            }

                            .right-col {
                            background-color: white;
                            min-height: 100vh;
                            width: 650px !important;
                            padding-right: 20px;
                            padding-top: 40px;
                            overflow: hidden;
                            }

                            .company_logo {
                            margin-left: 500px;
                            margin-top: 20px;
                            }

                            .skills_content {
                            margin-bottom: 70px;
                            }

                            .skill_header{
                            margin-left: 45px;
                            font-weight: bold;
                            color: white;
                            letter-spacing: 2px;
                            font-size: 20px;
                            }

                            .white_line{
                            height: 10px;
                            width: 335px;
                            margin-top: 20px;
                            margin-left: 45px;
                            background-color: white;
                            }

                            .brown_line{
                            height: 7px;
                            width: 335px;
                            margin-top: 20px;
                            margin-bottom: 70px;
                            background-color: saddlebrown;
                            }

                            .key_relevance_brown_line {
                            height: 7px;
                            width: 335px;
                            margin-top: 20px;
                            background-color: saddlebrown;
                            margin-bottom: 70px;
                            }

                            .education_header{
                            margin-left: 45px;
                            font-weight: bold;
                            color: white;
                            letter-spacing: 2px;
                            font-size: 20px;

                            }

                            .summary_exp{
                            margin-top: 70px;
                            margin-bottom: 20px;
                            font-weight: bold;
                            }

                            .summary_content{
                            margin-right: 40px;
                            font-size: 20px;
                            font-weight: bold;
                            font-family: "Fantasy", fantasy;
                            }

                            .key_relevance{
                            margin-top: 40px;
                            margin-bottom: 20px;
                            font-weight: bold;
                            }

                            .img-logo {
                            width: 50px;
                            height: 70px;
                            }

                            .right-container-wrapper {
                            margin-left: 80px;
                            margin-top: 50px;
                            }

                            .applicant_name {
                            margin-top: 10px;

                            }

                            .applicant-name-h1 {
                            color: saddlebrown;
                            font-family: "Fantasy", fantasy !important;
                            font-weight: bolder;
                            }

                            .content-data{
                            width: 600px !important;
                            }

                            .content-li{
                            display: flex;
                            flex-direction: row;
                            }

                            .content-li-data-name{
                            width: 160px;
                            }

                            .content-li-data-data{
                            width: 280px;
                            }

                            .project_desc {
                            margin-right: 40px;

                            }
                        </style>
                    </t>
                </div>

            <style>
                .row{
                display: flex;

                }



            </style>
        </t>


    </template>

