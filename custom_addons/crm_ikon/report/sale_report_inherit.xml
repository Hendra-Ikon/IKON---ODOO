<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="sales_report_inherit_crm_ikon" name="Sales Report By CRM IKON"
        inherit_id="sale.report_saleorder_document">

         <!-- header -->
        <xpath expr="//p[@t-if='doc.partner_id.vat']" position="after">
            <br />
            <t>
                <strong>Attention: </strong>
                <span t-field="doc.attention" />
            </t>
        </xpath>
        <xpath expr="//div[@t-if='doc.user_id.name']"
            position="replace">
        </xpath>
        <xpath expr="//div[@id='informations']" position="before">
            <t t-if="doc.project_name and doc.state not in ['draft', 'sent', 'cancel']" name="project_name">
                <strong>Project Name: </strong>
                <span t-field="doc.project_name" />
            </t>
        </xpath>
        <xpath expr="//div[@id='informations']" position="inside">
            <div t-if="doc.po_no and doc.state not in ['draft', 'sent', 'cancel']"
                class="col-auto col-3 mw-100 mb-2" name="po_fif">
                <strong>PO No. :</strong>
                <p class="m-0" t-field="doc.po_no" />
            </div>
            <!-- <div t-if="doc.po_no and doc.state not in ['draft', 'sent', 'cancel']"
                class="col-auto col-3 mw-100 mb-2" name="po_no">
                <strong>PR Date. :</strong>
                <p class="m-0" t-field="doc.po_date" />
            </div> -->
        </xpath>

        <!-- table -->
        <xpath expr="//th[@name='th_description']" position="after">
            <th name="th_item_id" class="text-end" t-if="doc.order_line.filtered(lambda line: line.item_id)">Item ID</th>
            <th name="th_item_description" class="text-end" t-if="doc.order_line.filtered(lambda line: line.item_description)">Item Description</th>
            <th name="th_period" class="text-end" t-if="doc.order_line.filtered(lambda line: line.period)">Period</th>
        </xpath>

       
        <xpath expr="//td[@name='td_name']" position="after">
            <td name="td_item_id" class="text-end">
                <span t-field="line.item_id"/>
            </td>
            <td name="td_item_description" class="text-end">
                <span t-field="line.item_description"/>
            </td>
            <td name="td_period" class="text-end">
                <span t-field="line.period"/>
            </td>
        </xpath>
                            
                            
    </template>

</odoo>